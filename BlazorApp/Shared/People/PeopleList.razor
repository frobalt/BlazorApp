@if (People == null)
{
    <div class="loader"></div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Date of birth</td>
                <td>Relationship status</td>
                <td>Created Date</td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#person-modal">
                        +
                    </button>
                </td>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in People)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.Name</td>
                    <td>@person.DateOfBirth.ToShortDateString()</td>
                    <td>@person.RelationshipStatus</td>
                    <td>@person.CreatedTimeStampUtc.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                    <td></td>
                </tr>
            }
            @if (!People.Any())
            {
                <tr>
                    <td colspan="6"></td>
                </tr>
            }
        </tbody>
    </table>
}